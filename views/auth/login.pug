extends ../layout/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pageName

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese su email..." type="text" name="email")

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese su contraseña..." type="text" name="password")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/register") No tienes cuenta? Crea una
                        a.text-gray-500.text-xs(href="/auth/recoverPassword") Olvide mi password

                    input(class="w-full py-3 rounded cursor-pointer bg-indigo-600 hover:bg-indigo-800 text-white font-bold " type="submit" value="Login")
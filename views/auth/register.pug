extends ../layout/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pageName

        if errors && errors.userExists != null
            div(class="max-w-md mx-auto my-10")
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= errors.userExists

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/register")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Nombre y Apellido
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese su Nombre..." type="text" name="nombre" value=usuario ? usuario.nombre : "")
                        if errors && errors.nombreError != null
                            div.flex.items-center.mt-1
                                svg(xmlns="http://www.w3.org/2000/svg" fill="none" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 stroke-red-600")
                                    path(stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z")
                                span.text-red-600.text-xs.ml-1= errors.nombreError

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese su email..." type="text" name="email" value=usuario ? usuario.email : "")
                        if errors && errors.emailError != null 
                            div.flex.items-center.mt-1
                                svg(xmlns="http://www.w3.org/2000/svg" fill="none" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 stroke-red-600")
                                    path(stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z")
                                span.text-red-600.text-xs.ml-1= errors.emailError

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Contrase単a
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingrese su contrase単a..." type="text" name="password")
                        if errors && errors.passwordError != null 
                            div.flex.items-center.mt-1
                                svg(xmlns="http://www.w3.org/2000/svg" fill="none" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 stroke-red-600")
                                    path(stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z")
                                span.text-red-600.text-xs.ml-1= errors.passwordError

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir_password") Confirmar Contrase単a
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Confirme su contrase単a..." type="text" name="repetir_password")
                        if errors && errors.confirmPasswordError != null 
                            div.flex.items-center.mt-1
                                svg(xmlns="http://www.w3.org/2000/svg" fill="none" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 stroke-red-600")
                                    path(stroke-linecap="round" stroke-linejoin="round" d="M12 9v3.75m9-.75a9 9 0 11-18 0 9 9 0 0118 0zm-9 3.75h.008v.008H12v-.008z")
                                span.text-red-600.text-xs.ml-1= errors.confirmPasswordError

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Ya tienes cuenta? Inicia Sesion
                        a.text-gray-500.text-xs(href="/auth/recoverPassword") Olvide mi password

                    input(class="w-full py-3 rounded cursor-pointer bg-indigo-600 hover:bg-indigo-800 text-white font-bold " type="submit" value="Send")
extends ../layout/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pageName

        if errors && errors.userDoesNotExists != null
            div(class="max-w-md mx-auto my-10")
                p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= errors.userDoesNotExists

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(class=class=errors && errors.passwordError ? "border-red-600  focus:outline-none" : "border-gray-300" placeholder="Ingrese su nueva contrase√±a..." type="password" name="password")
                        if errors && errors.passwordError != null 
                            include partials/error.pug
                                span.text-red-600.text-xs.ml-1= errors.passwordError

                    input(class="w-full py-3 rounded cursor-pointer bg-indigo-600 hover:bg-indigo-800 text-white font-bold " type="submit" value="Send")